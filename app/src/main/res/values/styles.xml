<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:fontFamily">@font/greycliff_cf_regular</item>
    </style>

    <style name="CustomDarkTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/text_color_secondary</item>
        <item name="editTextColor">@color/text_color_primary</item>
        <item name="android:fontFamily">@font/greycliff_cf_regular</item>
        <item name="actionBarPopupTheme">@style/CustomPopupMenuStyle</item>
    </style>


    <style name="GradientButton" parent="android:style/Widget.Button">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/tv_selector</item>
        <item name="android:background">@drawable/gradient_bg</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="buttonTint">@drawable/rb_selector</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:radius">5dp</item>
        <item name="android:fontFamily">@font/greycliff_cf_regular</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/text_color_primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/greycliff_cf_regular</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/greycliff_cf_regular</item>
    </style>

    <style name="CustomPopupMenuStyle" parent="CustomDarkTheme">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>





</resources>
